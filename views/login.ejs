<!doctype html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>login</title>
    <link rel="stylesheet" href="/library/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
<%- include("./public/header") %>
<div id="login-content">
    <div class="container">
        <div class="col-sm-6" id="login-left">
            <form>
                <div id="login-header"><h2>登录</h2></div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="请输入用户名" id="username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="请输入密码" id="password">
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> 记住密码
                    </label>
                </div>
                <button type="button" class="btn btn-danger btn-block" id="login-submit">登录</button>
            </form>
        </div>
        <div class="col-sm-6 hidden-xs" id="login-right">

        </div>
    </div>
</div>
<%- include("./public/footer") %>
<script src="/library/jquery/jquery-3.3.1.js"></script>
<script src="/library/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>