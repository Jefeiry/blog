    </div>
</div>



<div class="article-choice">
    <div class="div-hr"></div>
    <h4 class="choice-title">精选文章</h4>

    <% for(var i = 0; i < locals.articleJing.length; i++) { %>
    <div class="choice-body text-center">
        <% if(locals.articleJing[i].img) { %>
        <div class="choice-body-img">
            <img src="/uploads/<%= locals.articleJing[i].img %>" alt="">
        </div>
        <% } %>
        <div class="choice-body-content">
            <p>
                <a href=""><%= locals.articleJing[i].title %></a>
            </p>
        </div>
        <div class="choice-body-footer">
            <div class="pull-left">
                <span><%= locals.articleJing[i].create_at %></span>
            </div>
            <div class="pull-right">
                <i class="glyphicon glyphicon-heart"></i>
                <span>阅读</span>
                <span><%= locals.articleJing[i].view %></span>
            </div>
        </div>
    </div>
    <% } %>
</div>


<div class="article-hot">
    <div class="div-hr"></div>
    <h4 class="hot-title">热门文章</h4>
    <% for(var i = 0; i < locals.articleHot.length; i++) { %>
    <div class="hot-body text-center">

        <div class="hot-body-content">
            <p>
                <a href="/article/details?id=<%= locals.articleHot[i]._id %>"><%= locals.articleHot[i].title %></a>
            </p>
        </div>
        <div class="hot-body-footer">
            <div class="pull-left">
                <span><%= locals.articleHot[i].create_at %></span>
            </div>
            <div class="pull-right">
                <i class="glyphicon glyphicon-heart"></i>
                <span>阅读</span>
                <span><%= locals.articleHot[i].view %></span>
            </div>
        </div>
    </div>
    <% } %>
</div>