



<div class="person-introduction">
    <div class="div-hr"></div>
    <h4 class="introduction-title">博主简介</h4>
    <div class="introduction-header text-center">
        <% if(locals.userList.img) { %>
        <img src="/uploads/<%= locals.userList.img %>" alt="">
        <% } %>
    </div>
    <div class="introduction-content">
        <ul class="list-unstyled text-center">
            <li><a href=""><%= locals.userList.nickname %></a></li>
            <li><a href=""><%= locals.userList.position %></a></li>
            <li><a href="">公众号：<%= locals.userList.username %></a></li>
        </ul>
    </div>
    <div class="introduction-footer">
        <p>个性签名:<%= locals.userList.signature %></p>
    </div>
</div>



