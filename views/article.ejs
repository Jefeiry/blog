<!doctype html>
<html lang="zh-cn">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>文章详情页</title>
    <link rel="stylesheet" href="/library/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/article.css">
</head>

<body>
<%- include("./public/header") %>
<%- include("./public/nav") %>
<section class="content-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-8">


                <article class="article">
                    <div class="article-header">
                        <h1 class="article-title">
                            <a href="javascript:;"><%= details.title %></a>
                        </h1>
                        <div class="article-meta">
                            <span class="author">作者：<a href=""><%= details.author %></a></span>
                            <span>•</span>
                            <time class="art-date"><%= details.create_at %></time>
                        </div>
                    </div>
                    <div class="article-content">
                        <%- details.content %>
                    </div>

                    <div class="article-footer clearfix">
                        <div class="counter pull-right">
                            <i class="glyphicon glyphicon-heart"></i>
                            <span>阅读</span>
                            <span><%= details.view %></span>
                        </div>
                    </div>
                </article>


            </div>


            <div class="col-md-4">
                <%- include("./public/aside") %>

            </div>
        </div>
    </div>
</section>

<%- include("./public/footer") %>
<script src="/library/jquery/jquery-3.3.1.js"></script>
<script src="/library/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>
